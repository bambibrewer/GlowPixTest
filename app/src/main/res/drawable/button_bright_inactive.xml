<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid
                android:color="@color/colorInactive"/>
            <stroke
                android:width="1dp"
                android:color="@color/textBoxBorder" >
            </stroke>
            <size
                android:width="71sp"
                android:height="32sp"/>
            <corners
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp" />
        </shape>
    </item>
    <item>
        <inset
            android:drawable="@drawable/icon_bright_inactive"
            android:insetTop="5px"
            android:insetBottom="5px"
            android:insetLeft="24px"
            android:insetRight="24px"/>
    </item>
</layer-list>
